@model Microsoft.AspNetCore.Identity.IdentityUser

@{
    ViewData["Title"] = "User Details";
    var roles = ViewBag.Roles as IList<string>;
}

<h1>User Details</h1>
<hr />

<dl class="row">
    <dt class="col-sm-3">User ID</dt>
    <dd class="col-sm-9">@Model.Id</dd>

    <dt class="col-sm-3">Email</dt>
    <dd class="col-sm-9">@Model.Email</dd>

    <dt class="col-sm-3">Username</dt>
    <dd class="col-sm-9">@Model.UserName</dd>

    <dt class="col-sm-3">Email Confirmed</dt>
    <dd class="col-sm-9">@(Model.EmailConfirmed ? "Yes" : "No")</dd>

    <dt class="col-sm-3">Phone Number</dt>
    <dd class="col-sm-9">@(Model.PhoneNumber ?? "Not provided")</dd>

    <dt class="col-sm-3">Two-Factor Enabled</dt>
    <dd class="col-sm-9">@(Model.TwoFactorEnabled ? "Yes" : "No")</dd>

    <dt class="col-sm-3">Roles</dt>
    <dd class="col-sm-9">
        @if (roles != null && roles.Any())
        {
            @string.Join(", ", roles)
        }
        else
        {
            <span class="text-muted">No role assigned</span>
        }
    </dd>
</dl>

<div>
    <a asp-action="SetRole" asp-route-id="@Model.Id" class="btn btn-warning">Set Role</a>
    <a asp-action="Users" class="btn btn-secondary">Back to Users</a>
</div>
