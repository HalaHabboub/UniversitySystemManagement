@{
    ViewData["Title"] = "Admin Dashboard";
}

<h1>Admin Dashboard</h1>
<hr />

<!-- Stats cards -->
<div class="row">
    <div class="col-md-2">
        <div class="card text-white bg-primary mb-3">
            <div class="card-body text-center">
                <h6>Users</h6>
                <p class="display-6">@ViewBag.UserCount</p>
            </div>
        </div>
    </div>
    <div class="col-md-2">
        <div class="card text-white bg-success mb-3">
            <div class="card-body text-center">
                <h6>Students</h6>
                <p class="display-6">@ViewBag.StudentCount</p>
            </div>
        </div>
    </div>
    <div class="col-md-2">
        <div class="card text-white bg-info mb-3">
            <div class="card-body text-center">
                <h6>Instructors</h6>
                <p class="display-6">@ViewBag.InstructorCount</p>
            </div>
        </div>
    </div>
    <div class="col-md-2">
        <div class="card text-white bg-warning mb-3">
            <div class="card-body text-center">
                <h6>Courses</h6>
                <p class="display-6">@ViewBag.CourseCount</p>
            </div>
        </div>
    </div>
</div>

<!-- Quick links -->
<h4>Quick Actions</h4>
<div class="list-group" style="max-width: 400px;">
    <a asp-action="Users" class="list-group-item list-group-item-action">Manage Users</a>
    <a asp-controller="Departments" asp-action="Index" class="list-group-item list-group-item-action">Manage Departments</a>
    <a asp-controller="Courses" asp-action="Index" class="list-group-item list-group-item-action">Manage Courses</a>
    <a asp-controller="Instructors" asp-action="Index" class="list-group-item list-group-item-action">Manage Instructors</a>
    <a asp-controller="Students" asp-action="Index" class="list-group-item list-group-item-action">Manage Students</a>
</div>
