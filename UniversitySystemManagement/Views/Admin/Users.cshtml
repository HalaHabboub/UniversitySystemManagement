@model List<(Microsoft.AspNetCore.Identity.IdentityUser User, IList<string> Roles)>

@{
    ViewData["Title"] = "Manage Users";
}

<h1>Manage Users</h1>
<hr />

<!-- Error message display -->
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>Email</th>
            <th>Roles</th>
            <th>Email Confirmed</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.User.Email</td>
                <td>
                    @if (item.Roles.Any())
                    {
                        @string.Join(", ", item.Roles)
                    }
                    else
                    {
                        <span class="text-muted">No role assigned</span>
                    }
                </td>
                <td>
                    @(item.User.EmailConfirmed ? "Yes" : "No")
                </td>
                <td>
                    <a asp-action="UserDetails" asp-route-id="@item.User.Id" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="SetRole" asp-route-id="@item.User.Id" class="btn btn-sm btn-warning">Set Role</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Dashboard" class="btn btn-secondary">Back to Dashboard</a>
