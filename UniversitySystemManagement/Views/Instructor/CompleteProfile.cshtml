@{
    ViewData["Title"] = "Complete Your Profile";
    var departments = ViewBag.Departments as SelectList;
}

<h1>Complete Your Profile</h1>
<p class="text-muted">Please fill in your information to continue.</p>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="CompleteProfile" method="post">
            @Html.AntiForgeryToken()

            <div class="form-group mb-3">
                <label class="control-label">First Name</label>
                <input type="text" name="firstName" class="form-control" required />
            </div>

            <div class="form-group mb-3">
                <label class="control-label">Last Name</label>
                <input type="text" name="lastName" class="form-control" required />
            </div>

            <div class="form-group mb-3">
                <label class="control-label">Department</label>
                <select name="departmentId" class="form-control" asp-items="@departments" required>
                    <option value="">-- Select Department --</option>
                </select>
            </div>

            <button type="submit" class="btn btn-primary">Save Profile</button>
        </form>
    </div>
</div>
