@{
    ViewData["Title"] = "Enroll Student";
    var course = ViewBag.Course as UniversitySystemManagement.Models.Course;
    var students = ViewBag.Students as SelectList;
}

<h1>Enroll Student</h1>
<h4>Course: @course?.Title</h4>
<hr />

<form asp-action="EnrollStudent" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" name="courseId" value="@course?.CourseId" />

    <div class="form-group mb-3" style="max-width: 400px;">
        <label class="control-label">Select Student</label>
        <select name="studentId" class="form-control" asp-items="@students">
            <option value="">-- Select Student --</option>
        </select>
    </div>

    <button type="submit" class="btn btn-success">Enroll</button>
    <a asp-action="CourseStudents" asp-route-id="@course?.CourseId" class="btn btn-secondary">Cancel</a>
</form>
