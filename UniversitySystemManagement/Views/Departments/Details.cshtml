@model UniversitySystemManagement.Models.Department

@*
    This view uses HTML Helpers instead of Tag Helpers
    HTML Helpers: @Html.ActionLink(), @Html.DisplayFor(), @Html.DisplayNameFor()
    Tag Helpers: asp-action, asp-route-id (used in other controllers)
*@

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Department</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @* Html.DisplayNameFor() gets the label from model metadata *@
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @* Html.DisplayFor() displays the value *@
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
</div>
<div>
    @* Html.ActionLink() with route values replaces <a asp-action asp-route-id> *@
    @Html.ActionLink("Edit", "Edit", new { id = Model?.DepartmentId }) |
    @Html.ActionLink("Back to List", "Index")
</div>
