@model UniversitySystemManagement.Models.Department

@*
    This view uses HTML Helpers instead of Tag Helpers
    HTML Helpers: @Html.BeginForm(), @Html.HiddenFor(), @Html.ActionLink()
    Tag Helpers: asp-action, asp-for (used in other controllers)
*@

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Department</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @* Html.DisplayNameFor() gets the label from model metadata *@
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @* Html.DisplayFor() displays the value *@
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>

    @* Html.BeginForm() replaces <form asp-action="Delete"> *@
    @using (Html.BeginForm("Delete", "Departments", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        @* Html.HiddenFor() replaces <input type="hidden" asp-for="DepartmentId"> *@
        @Html.HiddenFor(model => model.DepartmentId)

        <input type="submit" value="Delete" class="btn btn-danger" /> 
        @* Html.ActionLink() replaces <a asp-action="Index"> *@
        @Html.ActionLink("Back to List", "Index")
    }
</div>
